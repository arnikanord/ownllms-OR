{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["server.ts", "src/config/**/*"],
  "exclude": ["node_modules"]
} 